/////////////////////////////////
// Guids
///////////////////////////////

.vertical-guides
	overflow visible

.vertical-guides figure figure
	&:before,
	&:after
		//- z-index 1
		background rgba(0,0,0, 0.08)

.horizontal-guides
	section
		position relative
		background transparent !important
	section:after
		margin 0 !important
		position absolute !important
		// z-index 99
		background rgba(0,0,0, 0.0015)

	// section:first-child:after
	//   display none
	section:before
		background rgba(0,0,0, 0.0015)
		position absolute !important
		bottom 0
		// z-index 99





guide_opacity = .03
guide_color = #000
.horizontal-guides
	section
		border-top alpha(guide_color, .1) solid 0px
		&:nth-child(2n+2)
			background alpha(#fff, .03)
		&:before
			border-top alpha(guide_color, guide_opacity) solid 1px
		&:after
			border-bottom alpha(guide_color, guide_opacity) solid 1px

.vertical-guides
	height: 100vh
	overflow-x hidden
	overflow-y auto
	position: fixed
	width 100%
	top: 0
	right: 0
	bottom: 0
	// margin-top -2px
	figure
		// padding-top 1px
		margin-bottom 0
		height 100vh
		figure
			&:before,
			&:after
				content ""
				position absolute
				width 1px
				height 100%
				background alpha(guide_color, guide_opacity)
			&:before
				left 0
			&:after
				right 0

.h-guide
	position relative
	float left
	&:nth-child(2n+2)
		background alpha(#fff, .05)

