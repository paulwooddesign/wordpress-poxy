.parallax__layer__1
  opacity .95

  section
    border none !important


.vertical-guides
  overflow visible



guid_opaicty = 0.8
guid_color = red

.vertical-guides figure figure
  &:before,
  &:after
    //- z-index 1
    background rgba(guid_color, guid_opaicty)

.horizontal-guides
  margin-top 1px
  section
    position relative
  section:after
    margin 0 !important
    position absolute !important
    // z-index 99
    background rgba(guid_color, guid_opaicty)
    display block !important

  section:first-child:after
    display none
  section:before
    background rgba(guid_color, guid_opaicty)
    position absolute !important
    bottom 0
    // z-index 99
    display block !important




.parallax
  -webkit-backface-visibility: hidden
  backface-visibility: hidden
  *
    -webkit-backface-visibility: hidden
    backface-visibility: hidden

  perspective: 100px
  height: 100vh
  overflow-x: hidden
  overflow-y: auto
  position: relative
  width 100%
  top: 0
  //left: 50%
  right: 0
  bottom: 0
  //margin-left: -1500px
.parallax__layer
  position: fixed
  top: 0
  right: 0
  width 100%
  bottom: 0
  left: 0
  background-repeat no-repeat !important
  .layer,
  img
    background-repeat no-repeat
    display: block
    position: absolute
    bottom: 0

.parallax__cover
  background: #111
  position: absolute
  top: 100%
  left: 0
  right: 0
  height: 2000px
  z-index: 2



.parallax__layer__0
  opacity .3
  background url('../images/rainbow-nebula.jpg') repeat






$parallax__layers = 6
for $i in (0)..($parallax__layers)
  $x = ($parallax__layers - $i) / 10
  .parallax__layer__{$i}
    transform: translateZ((-100 * $x)px) scale($x + 1)
