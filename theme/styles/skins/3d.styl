/////////////////////////////////
// Thumbs
///////////////////////////////
.featured-pages
  // h2
  //   letter-spacing .5rem !important

  figure
    transition 0.3s
  // figure:hover
  //   background-color #03a9f4 !important
  .image:hover
    background-size 110% !important


  h2
    &:before,
    &:after
      content attr(title)
      position absolute
      overflow hidden
      transition 300ms ease
      color #fff
      top 0
      left 0
      right 0
      bottom 0
      opacity 0
      visibility hidden
      transition-property opacity, visibility, transform

    &:before
      transform translateY(-100%)
    &:after
      transform translateY(100%)


  figure:hover h2:before,
  figure:hover h2:after
      opacity 1
      visibility visible
      transform none














