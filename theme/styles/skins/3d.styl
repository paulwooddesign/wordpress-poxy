/////////////////////////////////
// Page Animate
///////////////////////////////

.view
  width 100%
  padding-left 1em
  position absolute
  top 0
  left 0


.slideLeft.ng-enter,
.slideLeft.ng-leave,
.slideRight.ng-enter,
.slideRight.ng-leave
  transition all 1s

.slideLeft.ng-enter
  left 100%

.slideLeft.ng-enter.ng-enter-active
  left 0

.slideLeft.ng-leave.ng-leave-active
  left -100%

.slideRight.ng-enter
    left -100%

.slideRight.ng-enter.ng-enter-active
    left 0

.slideRight.ng-leave.ng-leave-active
    left 100%



