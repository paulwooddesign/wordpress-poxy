    .thumb
      // width 94%
      // height 94%
      width 97%
      height 97%
      transition $trans_duration ease
      // box-shadow inset 0 .2em .5em 0 #FFF, inset 0 -0.3em .4em 0px rgba(0, 0, 0, .2)
