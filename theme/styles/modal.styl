#overlay-menu
  height 100vh

.modal-overlay
  position fixed
  top 0px
  left 0px
  width 100%
  height 100%
  background rgba(0,0,0,0.8)
  transition 0.6s background, 0s visibility
  z-index 99

  .modal
    // width 300px
    // height 200px
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    background white
    border 1px solid rgba(0,0,0,0.2)
    transition 0.3s all
    box-shadow 0px 2px 4px rgba(0,0,0,0.4)
    z-index 99



.modal-overlay.ng-hide
  display block !important
  background rgba(0,0,0,0)
  visibility hidden
  transition 0.6s background, 0s 0.6s visibility

  .modal
    opacity 0
    transform translate(-50%, -40%)
