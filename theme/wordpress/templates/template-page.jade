:php
  /**
   * Chimera template for displaying the blog page
   *
   * @package WordPress
   * @subpackage Chimera
   * @since Chimera 1.0
   */

  get_template_part( 'part-header' );

- if (have_posts()):
  - get_template_part( 'part-header' );
- while (have_posts()):
- the_post();
main
  article.container
    - get_template_part('title');
    - get_template_part('meta');
    section.main
      - if (get_field('post_intro')):
        p.intro
          - the_field('post_intro');
      - endif;
      - the_content();
    - get_template_part('comments');
  - get_sidebar();
- endwhile;
- endif;
