:php
  /**
   * Chimera template for displaying the blog page
   *
   * @package WordPress
   * @subpackage Chimera
   * @since Chimera 1.0
   */

- get_template_part( 'part-header' );
- get_template_part('part-blog-categories');

- if (have_posts()):
- while (have_posts()):
  - the_post();
  - get_template_part('part-blog-section');
- endwhile;
- endif;

- get_template_part( 'part-pagination');
